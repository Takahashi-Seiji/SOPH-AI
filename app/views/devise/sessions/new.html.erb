<div class="container p-5">

  <h1 class="text-center">{ SOPH.AI }</h1>
  <h3 class="text-center mb-4">Personalized learning</h3>
  <h4 class="text-center mb-5">Welcome back!</h4>

  <div class="log-in-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center mb-3 mt-3">
        <%= f.button :submit, "Log in", class:"log-in-button" %>
      </div>
    <% end %>

    <h6 class="mb-3">Not a member yet?</h6>

    <%= render "devise/shared/links" %>
  </div>
</div>
