<turbo-frame id="results-frame">
  <div id="correct-answers" class="mb-4">
    <h1>Your results</h1>
    <h2>Your total score for this quiz on <%= lecture.title %> was: <%= quiz.grade %>/ 10</h2>
  </div>

  <div class="list-group">
    <% quiz.questions.each do |question| %>
      <div class="list-group-item">
        <h5 class="mb-1"><%= question.title %></h5>
        <% if question.correct? %>
          <p class="mb-1 text-success">✅: <%= question.correct_answer_value %> - <%= question.correct_answer_label %></p>
        <% else %>
          <p class="mb-1 text-danger">❌ Your answer</p>
          <hr>
          <p class="mb-1 text-success">Correct answer: <%= question.correct_answer_value %> - <%= question.correct_answer_label %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</turbo-frame>
